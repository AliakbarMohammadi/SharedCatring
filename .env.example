# ===========================================
# Enterprise Catering System - Environment
# ===========================================

# Node Environment
NODE_ENV=development

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=catering_user
POSTGRES_PASSWORD=catering_pass_123
POSTGRES_DB=catering_db

# MongoDB
MONGODB_URI=mongodb://localhost:27017/catering
MONGODB_USER=catering_user
MONGODB_PASSWORD=catering_pass_123

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_pass_123

# ===========================================
# Message Broker
# ===========================================

RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=catering_user
RABBITMQ_PASSWORD=rabbitmq_pass_123
RABBITMQ_VHOST=/

# ===========================================
# MinIO (File Storage)
# ===========================================

MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minio_access_key
MINIO_SECRET_KEY=minio_secret_key
MINIO_BUCKET=catering-files

# ===========================================
# JWT Configuration
# ===========================================

JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Service Ports
# ===========================================

API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
IDENTITY_SERVICE_PORT=3002
USER_SERVICE_PORT=3003
COMPANY_SERVICE_PORT=3004
MENU_SERVICE_PORT=3005
ORDER_SERVICE_PORT=3006
INVOICE_SERVICE_PORT=3007
PAYMENT_SERVICE_PORT=3008
WALLET_SERVICE_PORT=3009
NOTIFICATION_SERVICE_PORT=3010
REPORTING_SERVICE_PORT=3011
FILE_SERVICE_PORT=3012

# ===========================================
# Service URLs (Internal)
# ===========================================

AUTH_SERVICE_URL=http://auth-service:3001
IDENTITY_SERVICE_URL=http://identity-service:3002
USER_SERVICE_URL=http://user-service:3003
COMPANY_SERVICE_URL=http://company-service:3004
MENU_SERVICE_URL=http://menu-service:3005
ORDER_SERVICE_URL=http://order-service:3006
INVOICE_SERVICE_URL=http://invoice-service:3007
PAYMENT_SERVICE_URL=http://payment-service:3008
WALLET_SERVICE_URL=http://wallet-service:3009
NOTIFICATION_SERVICE_URL=http://notification-service:3010
REPORTING_SERVICE_URL=http://reporting-service:3011
FILE_SERVICE_URL=http://file-service:3012

# ===========================================
# Rate Limiting
# ===========================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Logging
# ===========================================

LOG_LEVEL=info
LOG_FORMAT=json
