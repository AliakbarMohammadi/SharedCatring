# ===========================================
# Production Environment Configuration
# سیستم کترینگ سازمانی - تنظیمات محیط تولید
# ===========================================

NODE_ENV=production

# ===========================================
# Database - PostgreSQL
# ===========================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=catering_user
POSTGRES_PASSWORD=catering_prod_pass_2024!
POSTGRES_DB=catering_db

# Database connection string
DATABASE_URL=postgresql://catering_user:catering_prod_pass_2024!@postgres:5432/catering_db

# ===========================================
# Database - MongoDB
# ===========================================
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_USER=catering_user
MONGODB_PASSWORD=catering_mongo_pass_2024!
MONGODB_DB=catering_db

# MongoDB connection string
MONGODB_URI=mongodb://catering_user:catering_mongo_pass_2024!@mongodb:27017/catering_db?authSource=admin

# ===========================================
# Cache - Redis
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_prod_pass_2024!

# ===========================================
# Message Queue - RabbitMQ
# ===========================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=catering_user
RABBITMQ_PASSWORD=rabbitmq_prod_pass_2024!
RABBITMQ_VHOST=/

# RabbitMQ connection string
RABBITMQ_URL=amqp://catering_user:rabbitmq_prod_pass_2024!@rabbitmq:5672/

# ===========================================
# Object Storage - MinIO
# ===========================================
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minio_prod_access_key
MINIO_SECRET_KEY=minio_prod_secret_key_2024!
MINIO_BUCKET=catering-files

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET=catering_jwt_super_secret_key_2024_production!
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Service URLs (Internal)
# ===========================================
API_GATEWAY_URL=http://api-gateway:3000
AUTH_SERVICE_URL=http://auth-service:3001
IDENTITY_SERVICE_URL=http://identity-service:3002
USER_SERVICE_URL=http://user-service:3003
COMPANY_SERVICE_URL=http://company-service:3004
MENU_SERVICE_URL=http://menu-service:3005
ORDER_SERVICE_URL=http://order-service:3006
INVOICE_SERVICE_URL=http://invoice-service:3007
PAYMENT_SERVICE_URL=http://payment-service:3008
WALLET_SERVICE_URL=http://wallet-service:3009
NOTIFICATION_SERVICE_URL=http://notification-service:3010
REPORTING_SERVICE_URL=http://reporting-service:3011
FILE_SERVICE_URL=http://file-service:3012

# ===========================================
# Payment Gateways
# ===========================================
# ZarinPal
ZARINPAL_MERCHANT_ID=your-zarinpal-merchant-id
ZARINPAL_SANDBOX=false
ZARINPAL_CALLBACK_URL=http://api-gateway:3000/api/v1/payments/verify

# IDPay
IDPAY_API_KEY=your-idpay-api-key
IDPAY_SANDBOX=false
IDPAY_CALLBACK_URL=http://api-gateway:3000/api/v1/payments/verify

# Default gateway
DEFAULT_PAYMENT_GATEWAY=zarinpal

# ===========================================
# SMS Provider
# ===========================================
SMS_PROVIDER=kavenegar
SMS_API_KEY=your-kavenegar-api-key
SMS_SENDER=your-sender-number

# Kavenegar specific
KAVENEGAR_API_KEY=your-kavenegar-api-key
KAVENEGAR_SENDER=your-sender-number

# ===========================================
# Email (SMTP)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@catering.ir
SMTP_PASS=your-smtp-password
SMTP_FROM=سیستم کترینگ <noreply@catering.ir>

# ===========================================
# File Upload
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,xlsx

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=https://catering.ir,https://admin.catering.ir

# ===========================================
# Feature Flags
# ===========================================
ENABLE_SWAGGER=false
ENABLE_MOCK_PAYMENTS=false
ENABLE_MOCK_SMS=false
ENABLE_MOCK_EMAIL=false
