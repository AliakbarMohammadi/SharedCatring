# ===========================================
# API Gateway Configuration
# پیکربندی دروازه API
# ===========================================

# Application
NODE_ENV=development
PORT=3000
SERVICE_NAME=api-gateway

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_pass_123
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=10

# CORS
CORS_ORIGIN=*

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
IDENTITY_SERVICE_URL=http://localhost:3002
USER_SERVICE_URL=http://localhost:3003
COMPANY_SERVICE_URL=http://localhost:3004
MENU_SERVICE_URL=http://localhost:3005
ORDER_SERVICE_URL=http://localhost:3006
INVOICE_SERVICE_URL=http://localhost:3007
PAYMENT_SERVICE_URL=http://localhost:3008
WALLET_SERVICE_URL=http://localhost:3009
NOTIFICATION_SERVICE_URL=http://localhost:3010
REPORTING_SERVICE_URL=http://localhost:3011
FILE_SERVICE_URL=http://localhost:3012

# Logging
LOG_LEVEL=info
LOG_DIR=logs
